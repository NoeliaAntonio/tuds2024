<% if (habit) { %> <!--habit vien de router en la funcion editar en la linea 473-->
<div class="container mt-4">
<div class="card border-secondary">  
<div class="card-header">Editar Registro de habito</div>
<div class="card-body">
<form action="/updatehabit" method="POST">
<input id="id" name="id" value="<%= habit.id %>" hidden>
<div class="mb-3">
<label for="user" class="form-label">Desde</label>
<input type="date" class="form-control" id="desde" name="desde" tabindex="1" value="<%= habit.desde  %>" required pattern="\d{4}-\d{2}-\d{2}" />                        
</div>
<div class="mb-3">
<label for="user" class="form-label">Hasta</label>
<input type="date" class="form-control" id="hasta" name="hasta" tabindex="2" value="<%= habit.hasta  %>" required pattern="\d{4}-\d{2}-\d{2}" />                        
</div> 
</div>
<div class="mb-3">
<label for="user" class="form-label">Nombre</label>
<input type="text" class="form-control" id="nombre" name="nombre" tabindex="3" value="<%= habit.nombre  %>">                        
</div>  

<button type="submit" class="btn btn-primary" tabindex="4">Guardar</button>
<a href="/indexhabito" class="btn btn-secondary">Cancelar</a>
<button  type="reset">Resetear</button>
</form>

</div>
</div>     
</div>
<% } %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
