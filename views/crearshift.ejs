<!--saveshift esta en el crudshift-->
<form action="/saveshift" method="POST" class="needs-validation" novalidate>
                      

  <div class="has-validation">
    <label for="shift" class="form-label">Secuencia</label>
    <input type="number" class="form-control" id="secuencia" name="secuencia" tabindex="1" required>
    <div class="valid-feedback">
      !Exelente!
    </div>
    <div class="invalid-feedback">
      por favor escriba el orden del turno
    </div>
  </div>


  <div class="has-validation">
    <label for="shift" class="form-label">Fecha</label>
    <input type="date" class="form-control" id="fecha" name="fecha" tabindex="2"  min="2024-11-5"
    max="2024-11-29"  required pattern="\d{4}-\d{2}-\d{2}">
    <div class="valid-feedback">
      !Exelente!
    </div>
    <div class="invalid-feedback">
      por favor escriba la fecha
    </div>
  </div>



  <div class="has-validation">
    <label for="shift" class="form-label">Hora</label>
    <input type="time" class="form-control" id="hora" name="hora" tabindex="3" required>
    <div class="valid-feedback">
      !Exelente!
    </div>
    <div class="invalid-feedback">
      por favor escriba la hora
    </div>
  </div>



            

                          <div class="has-validation">
                            <label for="shift" class="form-label">id_estado</label>
                            <select id="id_estado" name="id_estado"  tabindex="4"  required>
                                <option  value="1" selected>Atendido</option>
                                <option  value="2" selected>Esperando</option>
                               
                            </select>
                            <div class="valid-feedback">
                              !Exelente!
                            </div>
                            <div class="invalid-feedback">
                              por favor escriba un estado
                            </div>  
                          </div> 

                          <div class="has-validation">
                            <label for="shift" class="form-label">Motivo</label>
                            <input type="text" class="form-control" id="Motivo" name="motivo" tabindex="5" required>
                            <div class="valid-feedback">
                              !Exelente!
                            </div>
                            <div class="invalid-feedback">
                              por favor escriba un motivo
                            </div>
                          </div>
                        <br>
                        
                      
                                
<button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
