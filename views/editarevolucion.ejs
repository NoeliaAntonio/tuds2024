<% if (evolucion) { %>
<div class="container mt-4">
<div class="card border-secondary">  
<div class="card-header">Editar Registro de evolucion</div>
<div class="card-body">
<form action="/updateevolution" method="POST">
<input id="id" name="id" value="<%= evolucion.id %>" hidden><!--esto me lo hace invisible para el cliente-->
<div class="mb-3">
<label for="user" class="form-label">Titulo</label>
<input type="text" class="form-control" id="titulo" name="titulo" tabindex="1" value="<%= evolucion.titulo  %>">                         
</div>
<div class="mb-3">
<label for="user" class="form-label">Resumen</label>
<input type="text" class="form-control" id="resumen" name="resumen" tabindex="2" value="<%= evolucion.resumen  %>">                        
</div>   

<button type="submit" class="btn btn-primary" tabindex="3">Guardar</button>
<a href="/indexevolucion" class="btn btn-secondary">Cancelar</a>
<button  type="reset">Resetear</button>
</form>
</div>
</div>     
</div>
<% } %>
